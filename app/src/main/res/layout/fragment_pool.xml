<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Pool">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_back" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="100dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/smart"
                        android:textColor="@color/welcome_textcolor"
                        android:fontFamily="@font/poppinsblack"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home"
                        android:fontFamily="@font/poppins"
                        android:textSize="32sp"
                        android:textColor="@color/welcome_textcolor" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="@string/pool"
                        android:textColor="@color/welcome_textcolor"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="left"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_licht" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/blumen"
                                    android:textColor="@color/welcome_textcolor"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/switch_pool_blumen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:thumb="@drawable/thumb1"
                                    app:track="@drawable/track" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_licht" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/poolwand"
                                    android:textColor="@color/welcome_textcolor"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/switch_poolwand"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:thumb="@drawable/thumb1"
                                    app:track="@drawable/track" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp">

                            <com.google.android.material.slider.Slider
                                android:id="@+id/slider_pool"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:stepSize="1"
                                android:valueFrom="0"
                                android:valueTo="100"
                                app:haloColor="@color/halo_color"
                                app:labelBehavior="floating"
                                app:thumbColor="@color/app_yellow"
                                app:thumbRadius="20dp"
                                app:thumbStrokeColor="@color/background_dreieck"
                                app:thumbStrokeWidth="4dp"
                                app:tickColorActive="@color/app_yellow"
                                app:tickColorInactive="@color/halo_color"
                                app:trackColorActive="@color/app_yellow"
                                app:trackColorInactive="@color/halo_color"
                                app:trackHeight="20dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            tools:ignore="RtlHardcoded"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="30dp">

                    <ImageButton
                        android:id="@+id/szene_pool_hell"
                        android:layout_width="50dp"
                        android:layout_height="46dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/szene_hell"
                        android:tag="hell" />

                    <ImageButton
                        android:id="@+id/szene_pool_weiss"
                        android:layout_width="50dp"
                        android:layout_height="46dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/szene_weiss"
                        android:tag="weiss" />

                    <ImageButton
                        android:id="@+id/szene_pool_energie"
                        android:layout_width="50dp"
                        android:layout_height="46dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/szene_energie"
                        android:tag="energie" />

                    <ImageButton
                        android:id="@+id/szene_pool_sonnenuntergang"
                        android:layout_width="50dp"
                        android:layout_height="46dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/szene_sonnenuntergang"
                        android:tag="sonne" />

                    <ImageButton
                        android:id="@+id/szene_pool_tropen"
                        android:layout_width="50dp"
                        android:layout_height="46dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/szene_tropen"
                        android:tag="tropen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/pool_abeckung" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/pool_up"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/pfeil_up"
                            android:tag="up" />

                        <ImageButton
                            android:id="@+id/pool_stop"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/pause"
                            android:tag="stop" />

                        <ImageButton
                            android:id="@+id/pool_down"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/pfeil_down"
                            android:tag="down" />

                    </LinearLayout>
                </LinearLayout>


        </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>