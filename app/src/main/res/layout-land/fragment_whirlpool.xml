<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Whirlpool">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="57dp"
                    android:layout_height="60dp"

                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_back"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="@string/whirlpool"
                        android:textColor="@color/welcome_textcolor"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="left"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                >
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_licht"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="@string/blumen"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/welcome_textcolor"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.SwitchCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:thumb="@drawable/thumb1"
                                    app:track="@drawable/track"
                                    android:id="@+id/switch_blumen"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            >
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_licht"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="@string/terrasse"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/welcome_textcolor"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:thumb="@drawable/thumb1"
                                app:track="@drawable/track"
                                android:id="@+id/switch_terrasse"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp">
                            <com.google.android.material.slider.Slider
                                android:id="@+id/slider_whirlpool"
                                android:stepSize="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:valueFrom="0"
                                android:valueTo="100"
                                app:labelBehavior="floating"
                                app:haloColor="@color/halo_color"
                                app:thumbColor="@color/app_yellow"
                                app:thumbStrokeWidth="4dp"
                                app:thumbStrokeColor="@color/background_dreieck"
                                app:thumbRadius="20dp"
                                app:trackColorInactive="@color/halo_color"
                                app:trackColorActive="@color/app_yellow"
                                app:tickColorInactive="@color/halo_color"
                                app:tickColorActive="@color/app_yellow"
                                app:trackHeight="20dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            tools:ignore="RtlHardcoded"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/smart"
                    android:textColor="@color/welcome_textcolor"
                    android:fontFamily="@font/poppinsblack"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:fontFamily="@font/poppins"
                    android:textSize="32sp"
                    android:textColor="@color/welcome_textcolor" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">
                <ImageButton
                    android:id="@+id/szene_whirlpool_hell"
                    android:layout_width="50dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="20dp"
                    android:tag="hell"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/szene_hell"
                    />
                <ImageButton
                    android:id="@+id/szene_whirlpool_weiss"
                    android:layout_width="50dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:tag="weiss"
                    android:background="@drawable/szene_weiss"
                    />

                <ImageButton
                    android:id="@+id/szene_whirlpool_energie"
                    android:layout_width="50dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="10dp"
                    android:tag="energie"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/szene_energie"
                    />
                <ImageButton
                    android:id="@+id/szene_whirlpool_sonnenuntergang"
                    android:layout_width="50dp"
                    android:layout_height="46dp"
                    android:tag="sonne"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/szene_sonnenuntergang"
                    />
                <ImageButton
                    android:id="@+id/szene_whirlpool_tropen"
                    android:layout_width="50dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="10dp"
                    android:tag="tropen"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/szene_tropen"
                    />
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>

</FrameLayout>